<h3>Add the Show here : </h3>
<%= @sh.inspect %>

<%= form_for @sh do |s| %>
<%if @sh.errors.any?%>
<div class="alert alert-danger">
<ul>
    <% @sh.errors.full_messages.each do |msg| %>
    <li><%=msg%></li>
    <%end%>
</ul>
    </div>
<%end%>
<div class="form-group">
<label>Name : </label> 
<%= s.text_field :name ,class:"form-control"%> <br>
</div>
<div class="form-group">
<label>Description : </label> 
<%= s.text_area :description ,class:"form-control"%> <br>
</div>
    <div class="form-group">
<label>Recommended : </label> 
<%= s.check_box :recommended %> <br>
</div>
        <div class="form-group">
<label>Watched On : </label> 
<%= s.date_field :watchedon ,class:"form-control"%> <br>
</div>

<%= s.submit "Submit", class:"btn btn-success"%> <br>
<%end%>